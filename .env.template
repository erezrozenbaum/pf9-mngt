# Platform9 Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL container)
POSTGRES_USER=pf9
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_DB=pf9_mgmt

# Platform9 Service Account (for OpenStack API access)
# This account is used by scripts to read Platform9 infrastructure
PF9_USERNAME=your_service_account@company.com
PF9_PASSWORD=your_pf9_password_here
PF9_AUTH_URL=https://your-pf9-cluster.platform9.com/keystone/v3
PF9_USER_DOMAIN=Default
PF9_PROJECT_NAME=service
PF9_PROJECT_DOMAIN=Default
PF9_REGION_NAME=region-one
PF9_REGION_URL=https://your-pf9-region_url

# Web Admin Authentication (for create/delete operations via web UI/API)
# This is separate from Platform9 - it's for the management web interface
PF9_ADMIN_USERNAME=admin
PF9_ADMIN_PASSWORD=your-secure-admin-password

# Production Security Settings
PF9_ALLOWED_ORIGIN=https://your-production-domain.com

# Database Admin (pgAdmin web interface) 
PGADMIN_EMAIL=admin@your-company.com
PGADMIN_PASSWORD=secure-admin-password

# Database Connection (for scripts running outside Docker)
PF9_DB_HOST=localhost
PF9_DB_PORT=5432
PF9_DB_NAME=pf9_mgmt
PF9_DB_USER=pf9
PF9_DB_PASSWORD=pf9_password_change_me

# Optional: Output directory
PF9_OUTPUT_DIR=C:\Reports\Platform9

# LDAP Authentication Configuration
# Organization and domain settings for LDAP directory
LDAP_ORGANISATION=Your Organization Name
LDAP_DOMAIN=company.local
LDAP_ADMIN_PASSWORD=change-this-ldap-admin-password
LDAP_CONFIG_PASSWORD=change-this-ldap-config-password
LDAP_READONLY_USER=true
LDAP_READONLY_PASSWORD=change-this-ldap-readonly-password
LDAP_PORT=389
LDAP_SSL_PORT=636
LDAP_ADMIN_PORT=8081

# JWT Authentication Settings
JWT_SECRET_KEY=your-super-secret-jwt-key-minimum-32-chars-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# LDAP Directory Structure
LDAP_BASE_DN=dc=company,dc=local
LDAP_USER_DN=ou=users,dc=company,dc=local
LDAP_GROUP_DN=ou=groups,dc=company,dc=local

# Default Admin User (for initial system setup)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=change-this-default-admin-password

# Authentication Feature Control (set to 'false' to disable auth during testing)
ENABLE_AUTHENTICATION=true



# Comma-separated list of PF9 host IPs
PF9_HOSTS=10.1.1.100,10.1.1.101,10.1.1.102

# Metrics cache refresh interval (seconds)  
METRICS_CACHE_TTL=60







